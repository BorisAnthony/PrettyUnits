{
  "name": "borisanthony/pretty-unit",
  "description": "A wrapper class for accessing Prinsfrank/measurement-unit and formatting its output.",
  "version": "0.1.0",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Boris Anthony",
      "email": "964649+BorisAnthony@users.noreply.github.com"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "BorisAnthony\\PrettyUnit\\": "src/"
    }
  },
  "require-dev": {
    "pestphp/pest": "3.x-dev",
    "symfony/var-dumper": "7.3.x-dev"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
    "prinsfrank/measurement-unit": "^1.4"
  },
  "scripts": {
      "unit": "pest ./tests/Unit",
      "integration": "pest ./tests/Integration",
      "test": [
          "@unit"
      ]
  }
}
